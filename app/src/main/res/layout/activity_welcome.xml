<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    tools:context=".WelcomeActivity">

    <!-- Decorative background circles -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-80dp"
        android:alpha="0.6"
        android:background="@drawable/circle_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-40dp"
        android:alpha="0.4"
        android:background="@drawable/circle_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="-60dp"
        android:layout_marginBottom="-60dp"
        android:alpha="0.5"
        android:background="@drawable/circle_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Small decorative dots -->
    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/circle_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="80dp"
        android:alpha="0.5"
        android:background="@drawable/circle_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/circle_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtle top accent line -->
    <View
        android:id="@+id/accent_line"
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_accent_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toTopOf="@id/layout_buttons"
        app:layout_constraintTop_toBottomOf="@id/accent_line"
        app:layout_constraintVertical_bias="0.4">

        <!-- Health icon with glow wrapper -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Soft glow behind icon -->
            <View
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/glow_soft" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_health"
                app:tint="#FFFFFF" />

        </FrameLayout>

        <!-- App Name -->
        <TextView
            android:id="@+id/textView_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_bold"
            android:letterSpacing="-0.03"
            android:text="BioSync"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/textView_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/lexend"
            android:text="Your health, simplified."
            android:textColor="#808080"
            android:textSize="16sp" />

        <!-- SDG Badge near title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/sdg_badge_background"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:text="ðŸŒ SDG 3: Good Health &amp; Well-being"
                android:textColor="#666666"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Sign Up Button (Primary) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/lexend_medium"
            android:text="Sign Up"
            android:textColor="#0D0D0D"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:rippleColor="#E0E0E0" />

        <!-- Sign In Button (Secondary) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_login"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/lexend_medium"
            android:text="Sign In"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:rippleColor="#333333"
            app:strokeColor="#333333"
            app:strokeWidth="1dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
